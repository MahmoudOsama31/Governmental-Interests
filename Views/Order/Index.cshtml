@model RegisterCivilViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>E-Civil Registry|السجل المدني الالكتروني</title>

    <!-- Google font -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@200;400;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/card/css/all.min.css">
    <link rel="stylesheet" href="~/card/css/default.css">
    <link rel="stylesheet" href="~/card/css/animate.css">

    <link rel="stylesheet" href="~/card/css/overwrite.css">
    <link rel="stylesheet" href="~/card/css/simpletextrotator.css">

    <link href="https://fonts.googleapis.com/css?family=Cabin:400,700" rel="stylesheet">
    <link rel="icon" type="image/png" href="~/card/img/phar2.png" />

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/card/css/bootstrap.min.css" />

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/card/css/style.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle nav</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <!-- Logo text or image -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <a asp-action="Index" asp-controller="Home" asp-route-id="@UserManager.GetUserId(User)" class="navbar-brand"><span>E</span>-Civil Registry</a>
                }
                else
                {
                    <a class="navbar-brand" href="index.html"><span>E</span>-Civil Registry</a>
                }


            </div>
            <div class="navigation collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li><a asp-action="Index" asp-controller="Home" asp-route-id="@UserManager.GetUserId(User)">اتصل بنا</a></li>
                    }
                    else
                    {
                        <li><a>اتصل بنا</a></li>
                    }

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li><a asp-action="Index" asp-controller="Home" asp-route-id="@UserManager.GetUserId(User)">الخدمات</a></li>
                    }
                    else
                    {
                        <li><a>الخدمات</a></li>
                    }

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li><a asp-action="Index" asp-controller="Home" asp-route-id="@UserManager.GetUserId(User)">نبذه عنا</a></li>
                    }
                    else
                    {
                        <li><a>نبذه عنا</a></li>
                    }

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="current"><a asp-action="Index" asp-controller="Home" asp-route-id="@UserManager.GetUserId(User)">الرئيسية</a></li>
                    }
                    else
                    {
                        <li class="current"><a href="#intro">الرئيسية</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div id="booking" class="section">
        <div class="section-center">
            <div class="container">
                @if (ViewBag.Civil == false)
                {
                    <div class="row">
                        <div class="booking-form">
                            <div style="border:none; box-shadow:10px 10px 8px #888888;" class="booking-bg"></div>
                            <div style=" position: absolute; border-radius:5px; left: 0px; top: 650px; bottom: 0px; width: 250px; height: 430px;border:1px solid #ccc;box-shadow:3px 3px 6px blue,8px 8px 6px red,13px 13px 6px green; background-color:#eee;" class="notes">
                                <ul style="font-size:18px; padding-top:10px;">
                                    <li style="color:red;">
                                        عدم ادخال اي صوره غير صور الارشادات :
                                    </li>
                                    <li style="color:blue;list-style-type:none;">
                                        <span style="color:red;font-size:20px;">*</span> اول مره
                                        <ul style="font-size:15px; color:#000;">
                                            <li> الصوره الاولي <span style="color:red;">=></span> صوره شخصيه خلفيه بيضاء</li>
                                            <li> الصوره الثانيه <span style="color:red;">=></span> صوره للضامن من الدرجه الاولي</li>
                                        </ul>
                                    </li>
                                    <li style="color:blue;list-style-type:none;">
                                        <span style="color:red;font-size:20px;">*</span> تحديث بيانات
                                        <ul style="font-size:15px; color:#000;">
                                            <li> الصوره الاولي <span style="color:red;">=></span> صوره شخصيه خلفيه بيضاء</li>
                                            <li>الصوره الثانيه <span style="color:red;">=></span> وثيقه عامه رسميه {اقامه , عمل ,...} </li>
                                        </ul>
                                    </li>
                                    <li style="color:blue;list-style-type:none;">
                                        <span style="color:red;font-size:20px;">*</span> بدل فاقد
                                        <ul style="font-size:15px; color:#000;">
                                            <li> الصوره الاولي <span style="color:red;">=></span> صوره شخصيه خلفيه بيضاء</li>
                                            <li>الصوره الثانيه <span style="color:red;">=></span> صورة محضر فقد البطاقه </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                            <form method="post" asp-action="Index" asp-controller="Order" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div style="margin-top:50px;" class="form-header">
                                            <h2>ارسال طلب البطاقه الخاص بك</h2>
                                            <span></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <span class="form-label">الاسم بالكامل</span>
                                            <input asp-for="FullName" class="form-control" required>
                                            <span asp-validation-for="FullName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <span class="form-label">البريد الالكتروني</span>
                                            <input asp-for="Email" class="form-control" required>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <span class="form-label">العنوان بالكامل</span>
                                            <input asp-for="Address" class="form-control" required>
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <span class="form-label">تليفون المنزل</span>
                                            <input asp-for="Phone2" class="form-control" required>
                                            <span asp-validation-for="Phone2" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <span class="form-label">تليفون المحمول</span>
                                            <input asp-for="Phone1" class="form-control" required>
                                            <span asp-validation-for="Phone1" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <span class="form-label">المنطقه</span>
                                            <select asp-for="region" class="form-control" required asp-items="new SelectList(ViewBag.region)">
                                                <option value=""> المنطقه...</option>
                                            </select>
                                            <span class="select-arrow"></span>
                                            <span asp-validation-for="region" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <span class="form-label">المحافظة</span>
                                            <select asp-for="governorate" required class="form-control" asp-items="new SelectList(ViewBag.governorate)">
                                                <option value=""> المحافظه...</option>
                                            </select>
                                            <span class="select-arrow"></span>
                                            <span asp-validation-for="governorate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <span class="form-label">نوع البطاقة</span>
                                            <select asp-for="card_type" required class="form-control" asp-items="new SelectList(ViewBag.card_type)">
                                                <option value="">نوع البطاقة...</option>
                                            </select>
                                            <span class="select-arrow"></span>
                                            <span asp-validation-for="card_type" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="BirthDate" class="form-label"></label>
                                            <input type="date" asp-for="BirthDate" class="form-control" required>
                                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <span class="form-label">طريقة الدفع</span>
                                            <select asp-for="payment_method" required class="form-control" asp-items="new SelectList(ViewBag.payment_method)">
                                                <option value="">طريقة الدفع...</option>
                                            </select>
                                            <span class="select-arrow"></span>
                                            <span asp-validation-for="payment_method" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <span class="form-label">نوع الخدمة</span>
                                            <select asp-for="service_type" required class="form-control" asp-items="new SelectList(ViewBag.service_type)">
                                                <option value="">نوع الخدمة...</option>
                                            </select>
                                            <span class="select-arrow"></span>
                                            <span asp-validation-for="service_type" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <span class="form-label">الحالة الاجتماعية</span>
                                            <select asp-for="SocialStatus" required class="form-control" asp-items="new SelectList(ViewBag.SocialStatus)">
                                                <option value="">الحاله الاجتماعيه...</option>
                                            </select>
                                            <span class="select-arrow"></span>
                                            <span asp-validation-for="SocialStatus" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <span class="form-label">الديانة</span>
                                            <select asp-for="Religion" required class="form-control" asp-items="new SelectList(ViewBag.Religion)">
                                                <option class="down3" value="">الديانة...</option>
                                            </select>
                                            <span class="select-arrow"></span>
                                            <span asp-validation-for="Religion" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <span class="form-label">النوع</span>
                                            <select asp-for="Kind" required class="form-control" asp-items="new SelectList(ViewBag.kind)">
                                                <option value="">النوع...</option>
                                            </select>
                                            <span class="select-arrow"></span>
                                            <span asp-validation-for="Kind" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <span class="form-label">المؤهل</span>
                                            <input asp-for="qualification" class="form-control" required>
                                            <span asp-validation-for="qualification" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <span class="form-label">الصورة الثانيه</span>
                                            <input asp-for="Photo2" class="form-control" type="file" accept="image/*" required>
                                            <span asp-validation-for="Photo2" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <span class="form-label">الصورة الاولي</span>
                                            <input asp-for="Photo1" class="form-control" type="file" accept="image/*" required>
                                            <span asp-validation-for="Photo1" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <span class="form-label">ملاحظات</span>
                                    <textarea asp-for="Notes" class="form-control" placeholder="ضع ملاحظات اذا اردت..."></textarea>
                                </div>
                                <div class="form-btn">
                                    <button class="submit-btn">ارسال</button>
                                </div>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div style="border-bottom:none;" class="first-form">
                            <div class="row">
                                <div class="col-md-12">
                                    <div style="text-align:center;">
                                        <img style="width:200px;height:200px; margin-top:100px;" src="~/card/img/order-tracking.png" />
                                    </div>
                                </div>
                            </div>
                            <form method="post" asp-action="Search" asp-controller="Order">
                                <div style="" class="form-header">
                                    <h2>قم بتتبع طلب البطاقة الخاص بك<p><span class="not">*</span> قم بارسال طلبك اولا <span class="not">*</span></p></h2>
                                </div>
                                <div style="margin-bottom:50px;" class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <button class="follow" type="submit"><i class="fa fa-search"></i></button>
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            <input asp-for="Search" class="form-control" placeholder="ادخل رقم الهويه الخاصه بتتبع الطلب">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p style="text-align:center;">
                        &copy; Copyright <strong><span>2021 government interests</span></strong>. All Rights Reserved
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/card/js/popper.min.js"></script>
    <script src="~/card/js/jquery-3.5.0.min.js"></script>
    <script src="~/card/js/jquery.js"></script>
    <script src="~/card/js/jquery.nav.js"></script>
    <script src="~/card/js/jquery.nav.js"></script>
    <script src="~/card/js/jquery.scrollTo.min.js"></script>
    <script src="~/card/js/jquery.simple-text-rotator.min.js"></script>
    <script src="~/card/js/bootstrap.min.js"></script>
    <script src="~/card/js/contactform.js"></script>
    <script src="~/card/js/grid.js"></script>
    <script src="~/card/js/mb.bgndGallery.effects.js"></script>
    <script src="~/card/js/mb.bgndGallery.js"></script>
    <script src="~/card/js/modernizr.custom.js"></script>
    <script src="~/card/js/stellar.js"></script>
    <script src="~/card/js/wow.min.js"></script>
    <script src="~/card/js/main2.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>