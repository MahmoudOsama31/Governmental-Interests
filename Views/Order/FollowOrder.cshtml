@model OrderCivilModel
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>تتبع الطلب</title>
    <link href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' rel='stylesheet'>
    <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet'>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@200;400;900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/assets12/css/order.css">
    <!-- Favicons -->
    <link rel="icon" type="image/png" href="~/assets12/img/phar2.png">
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <script type='text/javascript' src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js'></script>
    <script type='text/javascript'></script>
</head>
<body oncontextmenu='return false' class='snippet-body'>
    <div class="container px-1 px-md-4 py-5 mx-auto">
        <div class="card">
            @if (ViewBag.Follow_Order == 0)
            {
                <div class="row">
                    <div class="col-md-6">
                        <p class="main">رقم الطلب <span class="mark">:- </span> <span class="info">@ViewBag.id</span></p>
                    </div>
                    <div class="col-md-6">
                        <p class="main">تاريخ الطلب <span class="mark">:- </span> <span class="info">@ViewBag.Date</span></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <p class="main">الاسم <span class="mark">:- </span> <span class="info">@ViewBag.name</span></p>
                    </div>
                    <div class="col-md-6">
                        <p style="direction:rtl;" class="main">نوع الخدمه <span class="mark">:- </span><span class="info">@ViewBag.serviceType</span></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <p style="direction:rtl;" class="main">طريقة الدفع <span class="mark">:- </span> <span class="info">@ViewBag.payment</span></p>
                    </div>
                    <div class="col-md-6">
                        <p class="main">نوع الطلب <span class="mark">:- </span><span class="info">@ViewBag.order</span></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p class="main"> العنوان <span class="mark">:- </span> <span class="info">@ViewBag.address</span></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="imges">
                            <img src="~/assets12/img/compliant.png" class="deliv">
                        </div>
                    </div>
                </div>



                @if (ViewBag.ispaid == true && ViewBag.confirmed == false && (ViewBag.vip == false || ViewBag.quick == false || ViewBag.normal == false))
                {
                    <div class="row d-flex justify-content-center">
                        <div class="col-12">
                            <ul id="progressbar" class="text-center">
                                <li class="active step0"></li>
                                <li class="step0"></li>
                                <li class="step0"></li>
                            </ul>
                        </div>
                    </div>
                }
                else if ((ViewBag.vip == true || ViewBag.quick == true || ViewBag.normal == true) && ViewBag.confirmed == false)
                {
                    <div class="row d-flex justify-content-center">
                        <div class="col-12">
                            <ul id="progressbar" class="text-center">
                                <li class="active step0"></li>
                                <li class="active step0"></li>
                                <li class="step0"></li>
                            </ul>
                        </div>
                    </div>
                }
                else if (ViewBag.confirmed == true)
                {
                    <div class="row d-flex justify-content-center">
                        <div class="col-12">
                            <ul id="progressbar" class="text-center">
                                <li class="active step0"></li>
                                <li class="active step0"></li>
                                <li class="active step0"></li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row d-flex justify-content-center">
                        <h1>ارسل الطلب اولا</h1>
                    </div>
                }

                <div class="row justify-content-between top">

                    <div class="row d-flex icon-content">
                        <img class="icon" src="https://i.imgur.com/u1AzR7w.png">
                        <div class="d-flex flex-column">
                            <p class="font-weight-bold">استقبال <br>الطلب</p>
                        </div>
                    </div>
                    <div class="row d-flex icon-content">
                        <img class="icon" src="https://i.imgur.com/9nnc9Et.png">
                        <div class="d-flex flex-column">
                            <p class="font-weight-bold">معالجة<br>الطلب</p>
                        </div>
                    </div>


                    <div class="row d-flex icon-content">
                        <img class="icon" src="https://i.imgur.com/HdsziHP.png">
                        <div class="d-flex flex-column">
                            <p class="font-weight-bold">توصيل<br>الطلب</p>
                        </div>
                    </div>
                </div>
            }
            else if (ViewBag.Follow_Order == 1)
            {
                <div class="row">
                    <div class="col-md-12"><p style="text-align:center; margin-top:40px;font-size:35px; font-weight:600;margin-bottom:20px;color:#ff3333;">لا يوجد طلب بهذا الرقم القومي</p></div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="imges">
                            <img src="~/assets12/img/compliant.png" class="deliv">
                        </div>
                    </div>
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="col-12">
                        <ul id="progressbar" class="text-center">
                            <li class="step0"></li>
                            <li class="step0"></li>
                            <li class="step0"></li>
                        </ul>
                    </div>
                </div>
                <div class="row justify-content-between top">

                    <div class="row d-flex icon-content">
                        <img class="icon" src="https://i.imgur.com/u1AzR7w.png">
                        <div class="d-flex flex-column">
                            <p class="font-weight-bold">استقبال <br>الطلب</p>
                        </div>
                    </div>
                    <div class="row d-flex icon-content">
                        <img class="icon" src="https://i.imgur.com/9nnc9Et.png">
                        <div class="d-flex flex-column">
                            <p class="font-weight-bold">معالجة<br>الطلب</p>
                        </div>
                    </div>


                    <div class="row d-flex icon-content">
                        <img class="icon" src="https://i.imgur.com/HdsziHP.png">
                        <div class="d-flex flex-column">
                            <p class="font-weight-bold">توصيل<br>الطلب</p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</body>
</html>