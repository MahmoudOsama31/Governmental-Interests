@model EditViewModel
@{
Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>تعديل الحساب</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/asset5/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@200;400;900&amp;display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <!-- Main css -->
    <link rel="stylesheet" href="~/asset5/css/style.css">
    <link rel="icon" type="image/png" href="~/asset5/images/phar2.png">

</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">تعديل الحساب</h2>
                        <form method="post" asp-action="Edit" asp-controller="Account" class="register-form" id="register-form">

                            <!-- --------------------------------------------------------------------------------------------------  // name -->
                            <div class="form-group">
                                <label asp-for="FirstName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="FirstName" id="name" placeholder="الاسم الاول" />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                            <div class="form-group">
                                <label asp-for="LastName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="LastName" id="name" placeholder="الاسم الاخير" />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                            <!-- --------------------------------------------------------------------------------------------------  // name -->
                            <!-- --------------------------------------------------------------------------------------------------  // email -->

                            <div class="form-group">
                                <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                                <input asp-for="Email" id="email" placeholder="البريد الالكتروني" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <!-- --------------------------------------------------------------------------------------------------  // email -->
                            <!-- --------------------------------------------------------------------------------------------------  // phone -->
                            <div class="form-group">
                                <label asp-for="PhoneNumber"><i class="zmdi zmdi-email"></i></label>
                                <input asp-for="PhoneNumber" id="email" placeholder="رقم الهاتف" />

                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            <!-- --------------------------------------------------------------------------------------------------  // phone -->
                            <!-- --------------------------------------------------------------------------------------------------  // password -->

                            <div class="form-group">
                                <label asp-for="CurrentPassword"><i class="zmdi zmdi-lock"></i></label>
                                <input asp-for="CurrentPassword" id="pass" placeholder="كلمة المرور القديمه" />
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            <div class="form-group">
                                <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                                <input asp-for="Password" id="pass" placeholder="كلمة المرور الجديده" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <!-- --------------------------------------------------------------------------------------------------  // password -->
                            <!-- --------------------------------------------------------------------------------------------------  // password -->

                            <div class="form-group">
                                <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock"></i></label>
                                <input asp-for="ConfirmPassword" id="pass" placeholder="كلمة المرور الجديده" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <!-- --------------------------------------------------------------------------------------------------  // password -->


                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="تحديث" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/asset5/images/phar2.png" alt="sing up image"></figure>
                    </div>
                </div>
            </div>
        </section>

        <!-- Sing in  Form -->
    </div>

    <!-- JS -->
    <script src="~/asset5/vendor/jquery/jquery.min.js"></script>
    <script src="~/asset5/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
