@model RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>انشاء حساب جديد</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/assets2/images/phar2.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/assets2/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/assets2/css/style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@200;400;900&display=swap" rel="stylesheet">
</head>

<body>

    <div class="wrapper" style="background-image: url('@Url.Content("~/assets2/images/R10.jpg")');">
        <div class="inner">
            <div class="image-holder">
                <img style="height:600px;" src="~/assets2/images/R11.jpg" alt="">
            </div>
            <form method="post" asp-action="Register" asp-controller="Account">
                <h3>انشاء حساب جديد</h3>
                <div class="form-group">
                    <input asp-for="FirstName" placeholder="الاسم الأول" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                    <input asp-for="LastName" placeholder="الاسم الأخير" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <br>
                <div class="form-wrapper">
                    <input  asp-for="Phone" placeholder="رقم الهاتف" class="form-control" >
                    <i class="zmdi zmdi-account"></i>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-wrapper">
                    <input asp-for="Card" placeholder="الرقم القومي" class="form-control" >
                    <i class="zmdi zmdi-account"></i>
                    <span asp-validation-for="Card" class="text-danger"></span>
                </div>
                <br>
                <div class="form-wrapper">
                    <input asp-for="Email" placeholder="البريد الألكتروني" class="form-control">
                    <i class="zmdi zmdi-email"></i>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br>
                <div class="form-wrapper">
                    <input asp-for="Password" placeholder="كلمة المرور(علي الاقل 6 احرف او ارقام)" class="form-control" >
                    <i class="zmdi zmdi-lock"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br>
                <div class="form-wrapper">
                    <input asp-for="ConfirmPassword" placeholder="تأكيد كلمة المرور" class="form-control">
                    <i class="zmdi zmdi-lock"></i>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <br>
                <button type="submit" style=" background: #00c1c1;">
                    تسجيل حساب
                </button>
            </form>
        </div>
    </div>





</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>