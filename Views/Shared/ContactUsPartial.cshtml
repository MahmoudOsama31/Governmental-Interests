@model ContactUs
@{
}
<!-- Contact -->
<section id="contact" class="home-section bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <div class="section-heading">
                    <h2>اتصل بنا</h2>
                    <div class="heading-line"></div>
                    <p>لاي استفسار او سؤال فقط ضع بياناتك وسنتواصل معك خلال 24 ساعه </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <div id="sendmessage">لقد قمت بارسال رسالتك , شكرا لك!</div>
                <div id="errormessage"></div>

                <form method="post" asp-action="Index" asp-controller="Home" class="form-horizontal contactForm" role="form">
                    <div class="col-md-offset-2 col-md-8">
                        <div class="form-group">
                            <input asp-for="FullName" class="form-control" id="name" placeholder="الاسم" data-rule="minlen:4" data-msg="من فضلك ادخل الاسم رباعي" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-offset-2 col-md-8">
                        <div class="form-group">
                            <input asp-for="Email"  class="form-control"  id="email" placeholder="البريد الالكتروني" data-rule="email" data-msg="من فضلك ادخل ايميلك بصورة صحيحه" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-offset-2 col-md-8">
                        <div class="form-group">
                            <input asp-for="PhoneNumber" class="form-control" id="tele" placeholder="رقم الهاتف" data-rule="minlen:4" data-msg="من فضلك ادخل الرقم كامل" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-offset-2 col-md-8">
                        <div class="form-group">
                            <select asp-for="Serves" class="form-control" title="اختر الخدمة" dir="rtl" asp-items="new SelectList(ViewBag.Serves)">
                                <option value="">ادخل خدمتك...</option>
                            </select>
                            <span asp-validation-for="Serves" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-offset-2 col-md-8">
                        <div class="form-group">
                            <textarea asp-for="Message" class="form-control" rows="5" data-msg="برجاء ادخل رسالتك" placeholder="الرساله"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <button type="submit" class="btn btn-theme btn-lg btn-block">ارسل</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>

    </div>
</section>