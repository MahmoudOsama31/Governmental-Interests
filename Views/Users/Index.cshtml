@model IEnumerable<UsersViewModel>
@{
    Layout = null;
    ViewData["Title"] = "Users";
}
<table class="table table-striped mt-4">
    <thead>
        <tr class="bg-primary text-white">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@string.Join(" , ",user.Roles.ToList())</td>

        </tr>
        }
    </tbody>
</table>